{
    "User":{
        "id": {
            "in": ["params"],
            "errorMessage": "Id must be an integer number",
            "isInt": true,
            "toInt": true
        },
        "email": {
            "in": ["body"],
            "errorMessage": "Email must be contains a valid email",
            "isEmail": true,
            "normalizeEmail": true
        },
        "password": {
            "in": ["body"],
            "errorMessage": "Password must be at least 6 characters",
            "isLength": {
                "options": {"min": 6}
            }
        },
        "phone": {
            "in": ["body"],
            "errorMessage": "Phone must be a valid phone number",
            "isMobilePhone": true
        },
        "name": {
            "in": ["body"],
            "errorMessage": "Name must be at least 3 ascii characters",
            "isAscii": true,
            "isLength": {
                "options": {
                    "min": 3
                }
            }
        }
    },
    "Product":{
        "id":{
            "in": ["params"],
            "errorMessage": "Id must be an integer number",
            "isInt": true,
            "toInt": true
        },
        "name":{
            "in": ["body"],
            "errorMessage": "Name must be at least 3 ascii characters",
            "isAscii": true,
            "isLength": {
                "options": {
                    "min": 3
                }
            }
        },
        "description":{
            "in": ["body"],
            "errorMessage": "Description must be at least 10 characters",
            "isLength": {
                "options": {
                    "min": 10
                }
            }
        },
        "unitPrice":{
            "in": ["body"],
            "errorMessage": "UnitPrice must be a number (max 2 decimal digits)",
            "isDecimal": {
                "options": {
                    "decimal_digits": "1,2"
                }
            },
            "toFloat": true
        },
        "images":{
            "in": ["body"]
            
        },
        "discountId":{
            "in": ["body"],
            "errorMessage": "DiscountId must be an integer number. This field is nullable not include in request or set '0' to set null in database.",
            "isInt": true,
            "toInt": true,
            "optional": {
                "checkFalsy": true
            }
        },
        "categoryId":{
            "in": ["body"],
            "errorMessage": "CategoryId must be an integer number",
            "isInt": true,
            "toInt": true
        },
        "text":{
            "in": ["body"],
            "errorMessage": "Text must be at least 3 ascii characters",
            "isAscii": true,
            "isLength": {
                "options": {
                    "min": 3
                }
            }
        }

    },
    "Order":{

    },
    "Discount":{

    },
    "Category":{
        
    }
}